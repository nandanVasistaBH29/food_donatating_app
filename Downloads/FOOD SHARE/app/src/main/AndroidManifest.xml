<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bd.edu.rifat.foodDonationApp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/food"
        android:label="Food Share"
        android:roundIcon="@drawable/food"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exam">
        <activity
            android:name="bd.edu.rifat.foodDonationApp.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bd.edu.rifat.foodDonationApp.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name="bd.edu.rifat.foodDonationApp.SignupActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name="bd.edu.rifat.foodDonationApp.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name="bd.edu.rifat.foodDonationApp.ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>